@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to FinanceApp</h1>
    <p class="lead mt-3">Track your income, expenses, and savings with ease.</p>

    <div class="mt-4">
        @if (Context.Request.Cookies["jwt"] == null) {
            <a class="btn btn-primary btn-lg me-2" asp-controller="Account" asp-action="Login">Log In</a>
            <a class="btn btn-outline-secondary btn-lg" asp-controller="Account" asp-action="Register">Get Started</a>
        } else {
            <a class="btn btn-success btn-lg me-2" asp-controller="Dashboard" asp-action="Index">Go to Dashboard</a>
            <a class="btn btn-outline-info btn-lg me-2" asp-controller="Account" asp-action="Me">My Profile</a>
            <a class="btn btn-danger btn-lg" asp-controller="Account" asp-action="Logout">Logout</a>
        }
    </div>
</div>
